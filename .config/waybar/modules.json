{
  // Workspaces
  "hyprland/workspaces" : {
    "format": "{icon}",
    "on-click": "activate",
    "persistent_workspaces": {
      "1": [],
      "2": [],
      "3": [],
      "4": [],
    },
    "sort-by-number": true,
  },

  // Language
  "hyprland/language": {
    "format": "{}",
    "min-length": 5,
    "tooltip": false,
  },

  // Keyboard
  "keyboard-state": {
    "capslock": true,
    "format": "{name} {icon} ",
    "format-icons": {
      "locked": "",
      "unlocked": ""
    },
  },

  // Audio Sink
  "pulseaudio#sink": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-bluetooth-muted": "{format-muted}",
    "format-muted": "󰖁",
    "format-icons": {
      "headphone": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": ["", " ", " "]
    },
    "on-click": "pavucontrol"
  },

  // Audio Source
  "pulseaudio#source": {
    "format": "{format_source}",
    "format-source": "{volume}% ",
    "format-source-muted": "󰍭",
    "on-click": "pavucontrol"
  },
}
